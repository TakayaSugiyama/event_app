<!DOCTYPE html>
<html>
  <head>
    <title>EventApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class = "navbar navbar-default bg-dark navbar-dark" role = "navigation" >
        <div class = "container">
          <div class = "navbar-header">
              <%= link_to "Event App" , root_path, class: "navbar-brand" %>
          </div>
          <div class = "ml-auto nav header">
            <% if user_signed_in? %>
                <%= link_to "イベント一覧", events_path, class: "nav-link" %>
                <%= link_to "イベントを作成する", new_event_path, class: "nav-link" %>
                <%= link_to "退会", retire_path, class: "nav-link" %>
                <%= link_to "ログアウト",destroy_user_session_path, class: "nav-link", method: :delete %>
            <% else %>
                <%= link_to "githubでログイン/登録する", user_github_omniauth_authorize_path , class: "nav-link" %>
            <% end  %>
          </div>
        </div>
    </header>
    <% if notice %>
      <div class = "alert alert-primary container">
          <p class="notice"><%= notice %></p>
      </div>
    <% end %>
    <div class = "container mt-4">
      <%= yield %>
    </div>
  </body>
</html>
