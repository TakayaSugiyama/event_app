<div class = "page-header">
  <h1>イベント一覧</h1>
</div>

<div class = "list-group mt-4">
  <% @events.each do |event| %>
    <%= link_to event, class: "list-group-item"  do %>
      <h4 class = "list-group-item-heading">
         <%= event.name %>
      </h4>
      <p class = "list-gruop-item-text">
        <%= l event.start_time %> 〜 <%= l event.end_time %>
      </p>
    <% end %>
  <% end  %>
  <%= paginate @events %>
</div>