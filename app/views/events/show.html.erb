<div class = "page-header">
  <h1>
    <%= @event.name %>
  </h1>
</div>

<div class = "card mb-3">
  <div class = "card-header">
    主催者
  </div>
  <div class = "card-body">
    <% if @event.owner.provider %>
      <%= link_to  "https://github.com/#{@event.owner.name}" do %>
        <%= image_tag @event.owner.image , height: "150px", width: "150px"%>
        <%= @event.owner.name %>
      <%  end  %>
    <% end  %>
  </div>
</div>

<div class = "card mb-3">
   <div class = "card-header">
      開催時間
   </div>
   <div class = "card-body">
     <%= l @event.start_time %> 〜 <%= l @event.end_time %>
   </div>
</div>

<div class = "card mb-3">
  <div class = "card-header">
     開催場所
  </div>
  <div class = "card-body">
    <%= @event.place %>
  </div>
</div>